@model IEnumerable<deneme_projesi.Models.CategoryModel>



<div>
    <h4>Blog Kategorileri</h4>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-6">
                <ul class="list-group">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <a href="/Blog/list/@item.Id" class="list-group-item btn-outline-secondary " style="text-decoration:dotted;">@item.KategoriAdi</a>
                        
                        <span class="badge bg-primary rounded-pill">@item.BlogSayisi</span>
                    </li>
                </ul>
            </div>
        }

    </div>
</div>