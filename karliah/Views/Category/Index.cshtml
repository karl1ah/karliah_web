@model IEnumerable<deneme_projesi.Models.CategoryModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

<h2>kategori listesi</h2>
<hr />
<p>
    @Html.ActionLink("Kategori ekle", "Create", null, new { @class = "btn btn-primary" })
</p>
<hr />
@if (TempData["Kategori"] != null)
{
    var kategori = (deneme_projesi.Models.Category)TempData["Kategori"];

    <div class="alert alert-success" role="alert">
        <strong>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check" viewBox="0 0 16 16">
                <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.267.267 0 0 1 .02-.022z" />
            </svg>
            @kategori.KategorAdi
        </strong>Kayıt Edildi
    </div>
}

<table class="table table-striped">
    <tr>
        <th style="width:70%">
            @Html.DisplayNameFor(model => model.KategoriAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BlogSayisi)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KategoriAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BlogSayisi)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm " })
                @*@Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-sm " })*@
                @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm " })

            </td>
        </tr>
    }

</table>
