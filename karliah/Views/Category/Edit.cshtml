@model deneme_projesi.Models.Category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

<h2>Kategori Güncelle</h2>
<hr />

<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.KategorAdi, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.KategorAdi, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.KategorAdi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Kaydet" class="btn btn-warning" />
                </div>
            </div>
            <div>
                @Html.ActionLink("Listeye geri dön", "Index", null, new { @class = "btn btn-secondary", @style = "text-decoration:dotted; " })
            </div>
    }
</div>


<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
