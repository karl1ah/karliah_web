@model IEnumerable<deneme_projesi.Models.BlogModel>
@{
                /**/

                ViewBag.Title = "Index";
}

<h2>Anasayfa</h2>
<hr />
<div class="container">
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
        <ol class="carousel-indicators">
            <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"></li>
            @foreach (var item in Model)
            {
                <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@item.Id"></li>
            }
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/img/Karliah.png" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5>karliah Blog Sitesine hoş geldiniz</h5>
                    <p>başlıca blogları görmek için kaydırınız</p>
                </div>


            </div>
            @foreach (var item in Model)
            {
                <div class="carousel-item">
                    <img src="http://via.placeholder.com/500x300" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>@item.baslik</h5>
                        <p>@item.Aciklama</p>
                    </div>
                </div>
            }

        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </a>
    </div>
</div>
<hr />

<div class="row">


    @foreach (var item in Model)
    {
        <div class="col-md-6">
            <div class="blog">
                <h3 class="page-item">
                    @item.baslik
                </h3>
                <p>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-clock" viewBox="0 0 16 16">
                        <path d="M8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71V3.5z" />
                        <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm7-8A7 7 0 1 1 1 8a7 7 0 0 1 14 0z" />
                    </svg>
                    @item.EklenmeTarihi
                </p>
                <hr />
                <img class="img-fluid" src="http://via.placeholder.com/250x100" alt="..." />

                <p>
                    @item.Aciklama
                </p>
                @Html.ActionLink("Daha Fazla", "Details", "Blog", new { id = item.Id }, new { @class = "btn btn-primary" })
                <hr />
                @*<button class="btn btn-primary">Daha Fazla...</button>*@
            </div>
        </div>
    }

</div>
